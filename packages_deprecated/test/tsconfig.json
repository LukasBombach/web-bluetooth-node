{
  "compilerOptions": {
    // Build Targets
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": false,

    // Strict Checks
    "strict": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,

    // Module Resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    // Building
    "composite": true,
    "incremental": true
  },
  "exclude": ["node_modules"]
}
